<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_radius3_stroke2_colorf">

    <TextView
        android:id="@+id/layout_desc_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="57dp"
        android:text="确认删除全部历史记录?"
        android:textColor="@color/color_3"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_below="@id/layout_desc_dialog"
        android:layout_marginTop="17dp"
        android:background="@drawable/shape_corner2_bottom_solid_white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/layout_left_dialog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_cancel"
            android:textColor="@color/color_616161"
            android:textSize="@dimen/sp_14"
            android:visibility="visible" />

        <View
            android:id="@+id/layout_line_one_more"
            android:layout_width="1.5dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="0"
            android:background="@color/color_64e0" />

        <TextView
            android:id="@+id/layout_right_dialog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_ok"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>
</RelativeLayout>
