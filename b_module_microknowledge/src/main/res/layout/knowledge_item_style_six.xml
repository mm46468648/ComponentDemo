<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    tools:ignore="RtlHardcoded">

    <TextView
        android:id="@+id/tvSexTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/color_2"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="那些更棒的点子来自于个体" />

    <TextView
        android:id="@+id/tv_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#ff5d5d5d"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/tvSexTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvSexTitle"
        app:layout_goneMarginTop="17dp"
        tools:text="副标题"
        tools:visibility="gone" />

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/tvSexTitle"
        app:layout_constraintTop_toBottomOf="@+id/tv_middle">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSexType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_radius2_stroke05_c0c0c0"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingTop="2dp"
                android:paddingRight="4dp"
                android:paddingBottom="2dp"
                android:textSize="9sp"
                tools:text="课程" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvSexSub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_9"
            android:textSize="13sp"
            tools:text="开课单位" />

        <TextView
            android:id="@+id/tvSexTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:textColor="@color/color_9"
            android:textSize="13sp"
            tools:text="时间" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_64e0"
        app:layout_constraintTop_toBottomOf="@+id/llBottom" />

</androidx.constraintlayout.widget.ConstraintLayout>