<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_recommend_style_four"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_reasons_four"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_alignBottom="@id/iv_recommend_style_four"
        android:background="@drawable/shape_coners2_color7f0"
        android:ellipsize="end"
        android:gravity="center|left"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/color_white"
        android:textSize="9sp"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/tv_type_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:visibility="gone"
        android:background="@drawable/shape_recommend_type"
        android:gravity="center"
        tools:visibility="visible"
        android:textColor="@color/color_white"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/ivPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/home_ic_study_room_play"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        android:layout_alignBottom="@id/iv_recommend_style_four"
        android:layout_alignRight="@+id/iv_recommend_style_four"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <TextView
        android:id="@+id/tvTitleStyleFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_recommend_style_four"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_2"
        android:textSize="15sp"
        tools:ignore="RtlHardcoded"
        tools:text="阿斯顿发送到发第三方" />

    <LinearLayout
        android:id="@+id/llCenterOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tvTitleStyleFour"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvCenterOneLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="阿斯顿发送到发第三方"
            android:textColor="@color/color_6B"
            android:textSize="13sp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tvCenterOneRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="阿斯顿发送到发第三方"
            android:gravity="right"
            android:textColor="@color/color_9"
            android:textSize="13sp"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llCenterTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/llCenterOne"
        android:visibility="gone"
        tools:visibility="visible"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvCenterTwoLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_9"
            android:textSize="13sp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tvCenterTwoRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="right"
            android:textColor="@color/color_9"
            android:textSize="13sp"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>



</RelativeLayout>
