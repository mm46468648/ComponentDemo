<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="263dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_radius3_white"
    android:layout_height="wrap_content">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tvMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="64dp"
        android:gravity="center"
        android:layout_marginRight="24dp"
        android:textColor="@color/color_9B9B9B"
        android:textSize="17sp" />

    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/viewLineMiddle"
        android:id="@+id/tvCancel"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/text_cancel"
        android:textColor="@color/color_9B9B9B"
        android:textSize="17sp" />
    <View
        app:layout_constraintTop_toTopOf="@+id/tvCancel"
        app:layout_constraintBottom_toBottomOf="@id/tvCancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/viewLineMiddle"
        android:layout_width="0.5dp"
        android:layout_height="24dp"
        android:layout_weight="0"
        android:background="@color/color_A5A5A5" />

    <TextView
        app:layout_constraintLeft_toRightOf="@id/viewLineMiddle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tvConfirm"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/text_ok"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp" />
</androidx.constraintlayout.widget.ConstraintLayout>