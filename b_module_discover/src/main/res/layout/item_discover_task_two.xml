<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"

    >

    <ImageView
        android:id="@+id/ivImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/common_bg_task_item_shape"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/common_bg_task_item_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTaskTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/color_white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,RtlHardcoded"
        tools:text="测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试" />


    <TextView
        android:id="@+id/tvTaskGetTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_D4D4D4"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/tvTaskTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTaskTitle"
        tools:ignore="RtlHardcoded"
        tools:text="领取时间：2029.09.08-2029.09.08" />

    <TextView
        android:id="@+id/tvTaskTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="100dp"
        android:textColor="@color/color_D4D4D4"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTaskGetTime"
        app:layout_constraintBottom_toTopOf="@+id/tvPeopleNUm"
        tools:ignore="RtlHardcoded"
        tools:text="任务时间：2029.09.08-2029.09.08" />

    <TextView
        android:id="@+id/tvPeopleNUm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_D4D4D4"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvTaskRewardScore"
        app:layout_constraintLeft_toRightOf="@+id/tvTaskRewardScore"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTaskRewardScore"
        tools:ignore="RtlHardcoded"
        tools:text="122323人参加" />

    <TextView
        android:id="@+id/jiangli"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="奖励积分"
        android:textColor="@color/color_D4D4D4"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@+id/tvTaskRewardScore"
        app:layout_constraintBottom_toBottomOf="@+id/tvTaskRewardScore"
        app:layout_constraintLeft_toLeftOf="@+id/tvTaskTitle"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tvTaskRewardScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:minWidth="80dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintRight_toLeftOf="@+id/tvPeopleNUm"
        android:layout_marginRight="30dp"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/jiangli"
        app:layout_constraintTop_toBottomOf="@+id/tvTaskTime"
        tools:ignore="RtlHardcoded"
        tools:text="1000" />


    <TextView
        android:id="@+id/tvTaskStatus"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textColor="@color/color_4C4C4C"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvTaskTime"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="RtlHardcoded"
        tools:text="测试"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>