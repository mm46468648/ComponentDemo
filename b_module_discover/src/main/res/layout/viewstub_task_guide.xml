<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent20"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:visibility="gone"
        tools:visibility="gone"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/llGuide3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@mipmap/ic_task_guide_3"
            android:scaleType="centerCrop"
            android:layout_width="340dp"
            android:layout_height="149dp"/>

        <TextView
            android:id="@+id/tvNext3"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_radius20_color_white"
            android:gravity="center"
            android:layout_width="82dp"
            android:layout_height="35dp"
            android:text="完成"
            android:textColor="#ff000000"
            android:textSize="15sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llGuide2"
        android:visibility="gone"
        tools:visibility="visible"
        android:gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                app:layout_constraintDimensionRatio="350:290"
                android:src="@mipmap/ic_task_guide_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="0dp"
                android:layout_height="0dp"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="这里展示可以领取的任务列表，点击任务卡片进入任务详情页领取任务"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/tvNext2"
                android:background="@drawable/shape_radius20_color_white"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="82dp"
                android:layout_height="35dp"
                android:text="下一步"
                android:textColor="#ff000000"
                android:textSize="15sp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        tools:visibility="gone"
        android:id="@+id/llGuide1"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/ic_task_guide_1"
            android:scaleType="centerCrop"
            android:layout_width="300dp"
            android:layout_height="210dp"/>

        <TextView
            android:id="@+id/tvNext1"
            android:layout_marginTop="38dp"
            android:background="@drawable/shape_radius20_color_white"
            android:gravity="center"
            android:layout_width="82dp"
            android:layout_height="35dp"
            android:text="下一步"
            android:textColor="#ff000000"
            android:textSize="15sp"
            />
    </LinearLayout>


</FrameLayout>