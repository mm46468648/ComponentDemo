<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/shape_oval_black_radius_5"
            android:drawablePadding="9dp"
            tools:text="第一篇文章"
            android:textColor="#ff252525"
            android:textSize="15sp"
            />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:drawableLeft="@mipmap/icon_task_resource_finish"
            android:layout_gravity="center_vertical|end"
            android:drawablePadding="6dp"
            android:text="待完成"
            android:textColor="#ff4f4f4f"
            android:textSize="15sp"
            />


        <TextView
            android:id="@+id/tvToDo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:background="@drawable/shape_primary_cornor12_with65"
            android:layout_gravity="center_vertical|end"
            android:text="去完成"
            android:textColor="@color/white"
            android:textSize="12sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_marginTop="5dp"
        android:layout_marginRight="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:maxLines="3"
        android:ellipsize="end"
        tools:visibility="visible"
        tools:text="如果你既不热爱你的工作，也不对之嗤之以鼻，那说明你做的还不够多"
        android:textColor="#ff767676"
        android:textSize="14sp"
        />
</LinearLayout>