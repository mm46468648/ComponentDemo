<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="8dp">

    <com.mooc.resource.widget.MoocImageView
        android:id="@+id/ivBg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/common_bg_cover_big_default"
        android:layout_width="0dp"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"/>

    <View
        android:background="@drawable/shape_coner8_trasparent50_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        tools:text="科技前沿"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        tools:textColor="@color/color_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.35"
        android:textColor="@color/color_EFEFF4"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:gravity="center"
        android:maxLines="2"
        tools:text="科技前沿阿斯顿发阿斯顿发阿斯顿发阿斯顿发阿斯顿发阿斯顿发发阿斯顿发阿斯顿发阿斯顿发"
        tools:textColor="@color/color_black"
        android:textColor="@color/color_EFEFF4"
        android:textSize="11sp" />
</androidx.constraintlayout.widget.ConstraintLayout>