<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_F3F3F3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape_bg_adapter_home2"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:maxLines="2"
            android:textColor="@color/color_2"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlHardcoded"
            tools:text="中国法律思想-故事与观念.古代卷-增订版" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle">


            <com.mooc.resource.widget.MoocImageView
                android:id="@+id/ivCover"
                android:layout_width="97dp"
                android:layout_height="65dp"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="ContentDescription,MissingConstraints" />


            <TextView
                android:id="@+id/type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/shape_recommend_type"
                android:gravity="center"
                android:text="课程"
                android:textColor="@color/color_white"
                android:textSize="10sp"
                app:layout_constraintRight_toRightOf="@+id/ivCover"
                app:layout_constraintTop_toTopOf="@+id/ivCover" />

            <TextView
                android:id="@+id/tvTypeGuessCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_recommend_custom_type"
                android:gravity="center"
                android:text="课程"
                android:textColor="@color/color_white"
                android:textSize="11sp"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="@+id/ivCover"
                app:layout_constraintTop_toTopOf="@+id/ivCover" />

            <TextView
                android:id="@+id/tvCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#5D5D5D"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivCover"
                tools:ignore="RtlHardcoded"
                tools:text="流星" />

            <TextView
                android:id="@+id/tvPlatform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#5D5D5D"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivCover"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivCover"
                tools:ignore="RtlHardcoded"
                tools:text="网易课程" />

            <TextView
                android:id="@+id/tvCourseTypeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_radius15_solid_ededed"
                android:paddingLeft="@dimen/dp_5"
                android:paddingTop="2dp"
                android:paddingRight="@dimen/dp_5"
                android:paddingBottom="2dp"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivCover"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@+id/tvPlatform"
                app:layout_constraintRight_toLeftOf="@+id/ivCover"
                app:layout_constraintTop_toTopOf="@+id/tvPlatform"
                tools:text="已开课" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>