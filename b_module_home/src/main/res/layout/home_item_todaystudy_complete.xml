<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:visibility="visible"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/shape_width4_height17_primary"
        android:layout_marginTop="20dp"
        android:drawablePadding="10dp"
        android:textColor="@color/color_2"
        tools:text="签到打卡"
        android:textSize="17sp" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        tools:visibility="visible"
        tools:text="军人优惠"
        android:layout_marginTop="27dp"
        android:textColor="@color/color_3"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toLeftOf="@+id/tvState"
        tools:text="已连续签到1天已连续签到1天已连续签到1天已连续签到1天已连续签到1天已连续签到1天已连续签到1天"
        android:ellipsize="end"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textColor="@color/color_2"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvDesc"
        android:layout_marginTop="3dp"
        android:gravity="center"
        tools:text="已打卡"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:visibility="visible" />


    <View
        android:id="@+id/viewBottomLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        android:layout_marginTop="25dp"
        style="@style/ViewLine1pxStyle"/>

</androidx.constraintlayout.widget.ConstraintLayout>