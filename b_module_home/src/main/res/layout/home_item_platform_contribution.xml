<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">



    <TextView
        android:id="@+id/tvRank"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        tools:text="1000"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/ranking_img"
        android:layout_width="30dp"
        android:layout_height="32dp"
        tools:visibility="visible"
        android:scaleType="centerCrop"
        android:src="@mipmap/home_ic_honor_one"
        app:layout_constraintLeft_toLeftOf="@+id/tvRank"
        app:layout_constraintRight_toRightOf="@+id/tvRank"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.mooc.resource.widget.MoocImageView
        android:id="@+id/mivAvatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@+id/tvRank"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    
    <TextView
        android:id="@+id/tvID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="100dp"
        android:singleLine="true"
        android:textColor="@color/color_818282"
        android:textSize="10sp"
        tools:text="ID:9889"
        app:layout_constraintLeft_toRightOf="@+id/mivAvatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/mivAvatar" />


    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="100dp"
        android:maxLines="1"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="哈哈哈"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/mivAvatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/mivAvatar" />
    

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GuideLine"
        app:layout_constraintGuide_percent="0.82"
        android:orientation="vertical"
        android:layout_width="1dp"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:id="@+id/tvScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="999.99"
        android:layout_marginLeft="10dp"
        android:textColor="#ff10955c"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/GuideLine"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>