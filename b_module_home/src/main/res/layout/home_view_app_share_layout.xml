<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:xt="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_black"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="360dp"
        android:layout_height="481dp"
        android:background="@mipmap/home_bg_share_invatation_top">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/iv_app_user_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/common_ic_user_head_normal"
               />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:ellipsize="end"
                android:gravity="left"
                android:maxWidth="160dp"
                android:maxLines="2"
                android:textColor="#ff979797"
                android:textSize="16sp"
                tools:ignore="MissingConstraints"
                tools:text="王大宽王大宽王大宽王大宽王大宽王大宽宽王大宽王大宽" />


        </LinearLayout>

        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="74dp"
            android:text="好友"
            android:textColor="#de999999"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.80"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:ellipsize="end"
            android:maxWidth="90dp"
            android:maxLines="1"
            android:textColor="#ff333333"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/tip"
            app:layout_constraintLeft_toRightOf="@+id/tip"
            app:layout_constraintTop_toTopOf="@+id/tip"
            tools:ignore="MissingConstraints"
            tools:text="王大宽王大宽" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="已在「军职在线」"
            android:textColor="#ff666666"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/tip"
            app:layout_constraintLeft_toRightOf="@+id/friend_name"
            app:layout_constraintTop_toTopOf="@+id/tip"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="学习了"
            android:textColor="#ff999999"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="@+id/tip"
            app:layout_constraintTop_toBottomOf="@+id/tip"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="7dp"
            android:textColor="#ff666666"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tip1"
            app:layout_constraintLeft_toRightOf="@+id/tip1"
            app:layout_constraintTop_toTopOf="@+id/tip1"
            tools:ignore="MissingConstraints"
            tools:text="123" />

        <TextView
            android:id="@+id/tip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="天"
            android:textColor="#ff999999"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/tip1"
            app:layout_constraintLeft_toRightOf="@+id/days"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/tip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:letterSpacing="0.1"
            android:text="邀请你加入"
            android:textColor="#ff999999"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="@+id/tip"
            app:layout_constraintTop_toBottomOf="@+id/tip2"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/line"
            android:layout_width="230dp"
            android:layout_height="1dp"
            android:layout_marginBottom="12dp"
            android:background="@color/color_E0E0E0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="360dp"
        android:layout_height="158dp"
        android:background="@mipmap/common_bg_share_invitation_bottom">

        <ImageView
            android:id="@+id/qr_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="7dp"
            android:src="@mipmap/common_iv_app_qr_code"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tip4"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tip4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="长按识别二维码下载"
            android:textColor="#ff666666"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/qr_img"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/qr_img"
            tools:ignore="MissingConstraints" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="接受邀请"
            android:textColor="#ff333333"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="@+id/tip4"
            app:layout_constraintTop_toBottomOf="@+id/tip4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>