<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/flHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.mooc.resource.widget.MoocImageView
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_marginTop="4dp"
            android:src="@mipmap/home_bg_honor_talent_head">

        </com.mooc.resource.widget.MoocImageView>
        <com.mooc.commonbusiness.widget.HeadView
            android:id="@+id/mivAvatar"
            android:layout_width="92dp"
            android:layout_height="92dp"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ellipsize="end"
        android:maxLength="8"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/color_1982FF"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/flHead"
        app:layout_constraintRight_toRightOf="@id/flHead"
        app:layout_constraintTop_toBottomOf="@+id/flHead" />
</androidx.constraintlayout.widget.ConstraintLayout>