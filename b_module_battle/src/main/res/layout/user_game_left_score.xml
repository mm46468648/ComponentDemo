<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="217dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg_ga_left"
    android:layout_height="170dp">

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:layout_width="45dp"
        android:id="@+id/img_user_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:src="@mipmap/common_ic_user_head_default"
        android:layout_marginLeft="20dp"
        android:layout_height="45dp"
        app:qmui_is_circle="true"
        app:qmui_border_width="1dp"
        app:qmui_border_color="@color/color_white"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/name"
        app:layout_constraintTop_toTopOf="@+id/img_user_header"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/dp_15"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/img_user_header"
        app:layout_constraintBottom_toBottomOf="@+id/img_user_header"
        android:textColor="@color/color_white"
        tools:text="王大宽王大宽王大宽王大宽王大宽"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_score_tip"
        app:layout_constraintTop_toBottomOf="@+id/img_user_header"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="38dp"
        app:layout_constraintLeft_toLeftOf="@+id/img_user_header"
        android:textColor="@color/color_white"
        android:text="得分"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_score"
        app:layout_constraintBottom_toBottomOf="@+id/tv_score_tip"
        android:layout_width="wrap_content"
        android:layout_marginBottom="-3dp"
        android:layout_marginLeft="12dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="38dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_score_tip"
        android:textColor="@color/color_white"
        tools:text="23000"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_answer_right_num"
        app:layout_constraintTop_toBottomOf="@+id/tv_score"
        android:layout_width="wrap_content"
        android:textSize="11sp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_score"
        android:textColor="@color/color_white"
        tools:text="连续答对5题"
        android:layout_height="wrap_content"/>




</androidx.constraintlayout.widget.ConstraintLayout>