<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_skill_list_item"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingRight="26dp"
    android:paddingLeft="26dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tvRank"
        android:layout_marginRight="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="军事科技军事科技军事科技军事科技军事科技军事科技军事科技军事科技军事科技"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="#ffffffff"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/tvTime"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintLeft_toLeftOf="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2021.10.31～2021.11.6"
        android:textColor="#ffbfd8ff"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/tvRank"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_skill_list_item_rank"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="70dp"
        android:layout_height="33dp"
        android:text="排行"
        android:textColor="#ffbfd8ff"
        android:textSize="15sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>