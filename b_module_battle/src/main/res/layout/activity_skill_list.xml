<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/bg_game_brum"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mooc.resource.widget.StatusBarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@mipmap/common_ic_back_white"
            android:background="@android:color/transparent"
            />

        <com.mooc.resource.widget.MCustomTablayout
            android:id="@+id/mctSkillTab"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:mct_select_text_blod="true"
            android:layout_marginRight="52dp"
            app:tabPaddingStart="1dp"
            app:tabPaddingEnd="1dp"
            app:mct_select_text_size="17sp"
            app:mct_tab_layout="@layout/battle_layout_tab_skill_list"
            app:mct_unselect_text_size="17sp"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/transparent"
            app:tabIndicatorHeight="0dp"
            app:tabMode="fixed"
            app:tabRippleColor="@android:color/transparent"
            app:tabSelectedTextColor="#ffffffff"
            app:tabTextColor="#ff8eb2f9" />
    </LinearLayout>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPage2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>