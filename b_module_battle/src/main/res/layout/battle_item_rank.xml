<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivLineTop"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:src="@mipmap/battle_ic_line_point"
        app:layout_constraintLeft_toLeftOf="@+id/tvNum"
        app:layout_constraintRight_toRightOf="@+id/tvScore"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivLineBottom"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/tvNum"
        app:layout_constraintRight_toRightOf="@+id/tvScore"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:background="@mipmap/battle_ic_line_point"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/ivHead"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:src="@mipmap/common_ic_user_head_normal"
        app:layout_constraintBottom_toTopOf="@+id/ivLineBottom"
        app:layout_constraintLeft_toRightOf="@+id/tvNum"
        app:layout_constraintTop_toBottomOf="@+id/ivLineTop" />

    <TextView
        android:id="@+id/tvNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="4"
        tools:textColor="@color/black" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="0dp"
        app:layout_constraintLeft_toRightOf="@+id/ivHead"
        app:layout_constraintTop_toTopOf="@+id/ivHead"
        android:textColor="@color/white"
        app:layout_constraintRight_toLeftOf="@+id/tvScore"
        tools:textColor="@color/black"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="测试"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivHead"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvScore"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:background="@drawable/battile_item_bg_score"
        android:textColor="@color/color_D7"
        tools:text="23445分"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>