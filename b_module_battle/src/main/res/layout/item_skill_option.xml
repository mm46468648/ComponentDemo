<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_marginBottom="13dp"
    android:background="@drawable/bg_game_options_default"
    android:gravity="center"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivMySelect"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_game_option_select_right" />

    </FrameLayout>

    <com.mooc.battle.view.NoInterceptScrollView
        android:id="@+id/svOption"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_weight="1">


        <TextView
            android:id="@+id/tvOption"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:minLines="2"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="俄罗斯" />

    </com.mooc.battle.view.NoInterceptScrollView>


    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivOtherSelect"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_game_option_select_right" />

    </FrameLayout>

</LinearLayout>