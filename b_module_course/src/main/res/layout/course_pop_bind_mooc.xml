<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="30dp"
    android:background="@drawable/shape_radius5_white"
    android:paddingBottom="30dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="该课程将进入中国大学MOOC，本平台可能无法同步学习数据，如需学习数据同步，请点击“如何绑定中国大学慕课平台账号”。"
        android:textColor="#ff222222"
        android:textSize="15sp"
        />

    <LinearLayout
        android:id="@+id/llCheck"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivCheck"
            android:src="@mipmap/common_selector_iv_cb_grey"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

        <TextView
            android:layout_marginLeft="11dp"
            android:textStyle="bold"
            android:text="已绑定，下次不再提醒"
            android:textColor="#ff222222"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/btOk"
        android:layout_marginTop="22dp"
        android:background="@drawable/shape_green_gradient25c794_primary_cornor18"
        android:text="知道了"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:layout_width="135dp"
        android:layout_height="35dp"/>
</LinearLayout>