<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:paddingBottom="20dp">


    <TextView
        android:id="@+id/chapter_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/color_64e0"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/shape_solid_primary_width3_height12"
        android:drawablePadding="15dp"
        tools:text="第一章"
        android:textColor="@color/color_4D0"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sub_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        tools:text="第一章"
        android:textColor="@color/color_3"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@+id/chapter_title" />

    <View
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/line"
        style="@style/ViewLine1pxStyle"
        app:layout_constraintTop_toBottomOf="@+id/sub_title" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/color_3"
        android:textSize="15sp"
        tools:text="总分10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />


    <Button
        android:id="@+id/btEnter"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_radius20_color_primary"
        android:gravity="center"
        android:text="进入"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/line" />

</androidx.constraintlayout.widget.ConstraintLayout>