<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="15dp"
    android:layout_height="90dp">


    <com.mooc.resource.widget.MoocImageView
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/ivTeacherAvater"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/common_ic_user_head_default"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvTeacherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/ivTeacherAvater"
        app:layout_constraintTop_toTopOf="@id/ivTeacherAvater"
        android:layout_marginLeft="15dp"
        tools:text="肖星"
        android:textColor="@color/color_262626"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvTeacherDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@id/ivTeacherAvater"
        app:layout_constraintBottom_toBottomOf="@id/ivTeacherAvater"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="清华大学知名教师，教师介绍教师简介。"
        android:textColor="@color/color_6F6F6F"
        android:textSize="@dimen/sp_14" />

</androidx.constraintlayout.widget.ConstraintLayout>