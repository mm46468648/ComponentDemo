<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:ellipsize="end"
        android:gravity="left"
        android:textStyle="bold"
        android:maxLines="2"
        android:textColor="@color/color_2"
        android:textSize="15sp"
        tools:text="运动与健康 （自主模式）"
        tools:ignore="MissingConstraints" />

    <com.mooc.resource.widget.MoocImageView
        android:id="@+id/ivCover"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <TextView
        android:id="@+id/tvOrg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_A3A3A3"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@id/ivCover"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivCover"
        tools:text="湖北大学" />

    <TextView
        android:id="@+id/tvPlatform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_A3A3A3"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivCover"
        app:layout_constraintLeft_toLeftOf="@id/tvOrg"
        app:layout_constraintTop_toTopOf="@+id/ivCover"
        tools:text="学堂在线" />

    <TextView
        android:id="@+id/tv_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/color_5D5D5D"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvPlatform"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        tools:text="作业：20%" />


    <TextView
        android:id="@+id/tvScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:ellipsize="end"
        android:textColor="@color/color_A3A3A3"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivCover"
        app:layout_constraintLeft_toLeftOf="@+id/tvOrg"
        app:layout_constraintRight_toLeftOf="@+id/tvGet"
        tools:text="得分: 3.0" />


    <TextView
        android:id="@+id/tvGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="@color/color_A3A3A3"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivCover"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="已学: 3.70%" />


</androidx.constraintlayout.widget.ConstraintLayout>