<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="263dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_radius3_white"
    android:paddingBottom="30dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="40dp">

    <TextView
        android:id="@+id/layout_dialog_confirm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="是否删除该学习清单？"
        android:textColor="@color/color_9B9B9B"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tvCreateName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_dialog_confirm_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="mingcheng"
        android:textColor="#1982FF"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:background="@null"
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#1982FF"
            android:textSize="@dimen/sp_14" />


        <Button
            android:background="@null"
            android:id="@+id/tvOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_3"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</LinearLayout>
