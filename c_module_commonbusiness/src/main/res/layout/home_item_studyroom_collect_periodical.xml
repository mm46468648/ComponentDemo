<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_periodical_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@+id/iv_periodical"
            android:ellipsize="end"
            android:gravity="left"
            android:lineSpacingExtra="@dimen/dp_4"
            android:maxLines="2"
            android:textColor="@color/color_2"
            android:textSize="15sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/iv_periodical"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_marginRight="15dp"
            android:padding="1dp"
            tools:ignore="ContentDescription,MissingConstraints" />


        <!--        <TextView-->
        <!--            android:id="@+id/tv_time"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_alignTop="@+id/iv_periodical"-->
        <!--            android:layout_marginTop="@dimen/dp_3"-->
        <!--            android:layout_toRightOf="@+id/iv_periodical"-->
        <!--            android:textColor="@color/color_9"-->
        <!--            android:textSize="@dimen/sp_13" />-->

        <TextView
            android:id="@+id/tv_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_time"
            android:layout_alignLeft="@+id/tv_periodical_title"
            android:layout_marginBottom="@dimen/dp_10"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:textColor="@color/color_5D5D5D"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_periodical"
            android:layout_toRightOf="@+id/iv_periodical"
            android:textColor="@color/color_A3A3A3"
            android:textSize="11sp" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_E5E5E5" />

</RelativeLayout>
