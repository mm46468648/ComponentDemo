<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="350dp"
        android:layout_height="376dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/home_icon_show_studyproject_dialog_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_plan_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:ellipsize="end"
        android:maxWidth="200dp"
        android:visibility="gone"
        android:maxLines="1"
        android:text="@string/text_plan_success"
        android:textColor="@color/color_D33F3F"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@id/iv_bg"
        app:layout_constraintRight_toRightOf="@id/iv_bg"
        app:layout_constraintTop_toTopOf="@id/iv_bg" />

    <ImageView
        android:id="@+id/oval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@mipmap/home_ic_show_score_oval"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bg"
        app:layout_constraintLeft_toLeftOf="@+id/iv_bg"
        app:layout_constraintRight_toRightOf="@+id/iv_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_bg" />

    <ImageView
        android:id="@+id/iv_share_score_close"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginRight="37dp"
        android:src="@mipmap/common_ic_pop_close"
        app:layout_constraintRight_toRightOf="@+id/iv_bg"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_plan_pop_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:ellipsize="end"
        android:gravity="center"
        app:layout_constraintVertical_bias="0.3"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bg"
        app:layout_constraintLeft_toLeftOf="@+id/iv_bg"
        app:layout_constraintRight_toRightOf="@+id/iv_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_bg"
        tools:text="测试数据中测试数据中测试数据中" />

    <TextView
        android:id="@+id/tv_plan_bet_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_B12032"
        android:textSize="45sp"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bg"
        app:layout_constraintLeft_toLeftOf="@+id/iv_bg"
        app:layout_constraintRight_toRightOf="@+id/iv_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_bg"
        tools:text="20" />

    <TextView
        android:id="@+id/tv_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pop_plan_get"
        android:visibility="gone"
        android:textColor="@color/white"
        android:layout_marginRight="30dp"
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@+id/tv_plan_bet_score"
        app:layout_constraintBottom_toBottomOf="@+id/tv_yucun" />


    <TextView
        android:id="@+id/tv_yucun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:text="@string/pop_plan_bet_score"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintCircle="@+id/tv_plan_bet_score"
        app:layout_constraintCircleAngle="110"
        app:layout_constraintCircleRadius="90dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_plan_bet_score"
        app:layout_constraintTop_toTopOf="@+id/tv_plan_bet_score" />


    <TextView
        android:id="@+id/tv_plan_extra_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="44dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_bg"
        app:layout_constraintRight_toRightOf="@+id/iv_bg"
        app:layout_constraintTop_toBottomOf="@+id/tv_plan_bet_score"
        tools:text="299292" />

    <TextView
        android:id="@+id/tv_plan_pop_look_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/home_ic_next_yellow"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:layout_marginBottom="35dp"
        android:text="@string/pop_plan_look_my_point"
        android:textColor="@color/color_F8E71C"
        android:textSize="15sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="@+id/iv_bg"
        app:layout_constraintRight_toRightOf="@+id/iv_bg"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>


