<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/color_white"
    android:orientation="vertical">

  <com.mooc.resource.widget.CommonTitleLayout
      android:id="@+id/commonTitleLayout"

      app:ctl_adapteStatusBar="true"
      app:ctl_middle_text="发表动态  "
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/completeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:drawablePadding="5dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@mipmap/common_ic_warning_track"
        android:text="@string/text_no_complete_track"
        android:textSize="13sp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/color_3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/studyproject_iv_shadow" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>


</LinearLayout>

