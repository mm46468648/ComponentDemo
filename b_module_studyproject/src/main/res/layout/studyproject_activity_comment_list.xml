<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/viewSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_64e0" />

        <TextView
            android:id="@+id/tvPublishComment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="发布我的评论"
            android:textColor="#10955B"
            android:textSize="17sp" />


    </RelativeLayout>

    <com.mooc.resource.widget.CommonTitleLayout
        android:id="@+id/commonTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ctl_adapteStatusBar="true"
        />

    <FrameLayout
        android:id="@+id/commendfragment"
        android:layout_below="@+id/commonTitle"
        android:layout_above="@+id/viewSend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>