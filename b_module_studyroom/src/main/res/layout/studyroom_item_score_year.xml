<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llYearScore"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/color_e7"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:id="@+id/tvYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:drawableRight="@mipmap/studyroom_ic_score_detail_arrow_down"
        android:drawablePadding="4dp"
        android:textColor="@color/color_2"
        android:textSize="15sp"
        tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml"
        tools:text="2020年" />

    <TextView
        android:id="@+id/tvYearScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvYear"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/color_9"
        android:textSize="12sp"
        tools:ignore="RtlHardcoded"
        tools:text="年积分" />

</RelativeLayout>

