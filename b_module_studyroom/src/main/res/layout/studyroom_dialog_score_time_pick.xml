<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_radius15_color_white"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    tools:ignore="MissingDefaultResource">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_black"
            android:textSize="15sp"
            />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tvOk"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_black"
            android:textSize="15sp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <com.contrarywind.view.WheelView
            android:id="@+id/wv_year"
            app:wheelview_textSize="18sp"
            app:wheelview_dividerWidth="58dp"
            app:wheelview_lineSpacingMultiplier="2"
            app:wheelview_textColorCenter="@color/color_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"/>
        <com.contrarywind.view.WheelView
            android:id="@+id/wv_month"
            app:wheelview_textSize="18sp"
            app:wheelview_dividerWidth="58dp"
            app:wheelview_lineSpacingMultiplier="2"
            app:wheelview_textColorCenter="@color/color_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"/>

    </LinearLayout>

</LinearLayout>