<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <View
            android:id="@+id/time_line_top"
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            android:background="@color/color_64e0"
            app:layout_constraintBottom_toTopOf="@+id/time_icon"
            app:layout_constraintLeft_toLeftOf="@+id/time_icon"
            app:layout_constraintRight_toRightOf="@+id/time_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/time_line_bottom"
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            android:background="@color/color_64e0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/time_icon"
            app:layout_constraintRight_toRightOf="@+id/time_icon"
            app:layout_constraintTop_toBottomOf="@+id/time_icon" />

        <ImageView
            android:id="@+id/time_icon"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:src="@drawable/studyroom_shape_oval_strok1_979797_solidwhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="7dp"/>

        <TextView
            android:paddingTop="20dp"
            android:paddingBottom="7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/time_icon"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/tv_time_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/color_8BB0A0"
            android:textSize="16sp"
            tools:text="2022.02.03" />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:orientation="horizontal">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <View
                android:id="@+id/detaile_line_top"
                android:layout_width="0.5dp"
                android:layout_height="0dp"
                android:background="@color/color_64e0"
                app:layout_constraintBottom_toTopOf="@+id/detaile_time_icon"
                app:layout_constraintLeft_toLeftOf="@+id/detaile_time_icon"
                app:layout_constraintRight_toRightOf="@+id/detaile_time_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/detaile_line_bottom"
                android:layout_width="0.5dp"
                android:layout_height="0dp"
                android:background="@color/color_64e0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/detaile_time_icon"
                app:layout_constraintRight_toRightOf="@+id/detaile_time_icon"
                app:layout_constraintTop_toBottomOf="@+id/detaile_time_icon" />

            <ImageView
                android:id="@+id/detaile_time_icon"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:src="@drawable/studyroom_shape_oval_solid_d8d8d8_size5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.mooc.resource.widget.tagtext.TagTextView
            android:layout_marginTop="7.5dp"
            android:layout_marginBottom="7.5dp"
            android:id="@+id/tv_title_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginRight="10dp"
            android:maxLines="2"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/color_2"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>
