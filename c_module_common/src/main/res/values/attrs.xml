<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--布局公共头部View-->
    <declare-styleable name="CommonTitleLayout">
        <attr name="ctl_left_icon" format="reference"/>
        <attr name="ctl_right_icon" format="reference"/>
        <attr name="ctl_right_second_icon" format="reference"/>
        <attr name="ctl_middle_text" format="string"/>
        <attr name="ctl_right_text" format="string"/>
        <attr name="ctl_right_text_drawableleft" format="reference"/>
        <attr name="ctl_middle_text_color" format="color"/>
        <attr name="ctl_right_text_color" format="color"/>
        <!--是否适应沉浸式状态栏-->
        <attr name="ctl_adapteStatusBar" format="boolean"/>
    </declare-styleable>

    <!--状态栏占位View-->
    <declare-styleable name="StatusBarView">
        <attr name="appBarColor" format="color"/>
    </declare-styleable>

    <!-- SimpleTabLayout指示器 -->
    <declare-styleable name="SimpleTabLayout">
        <!-- 滑动条的颜色 -->
        <attr name="stlIndicatorColor" format="color" />
        <!-- 滑动条所在的那个全宽线的颜色 -->
        <attr name="stlUnderlineColor" format="color" />
        <!-- 每个标签的分割线的颜色 -->
        <attr name="stlDividerColor" format="color" />
        <!-- 滑动条的高度 -->
        <attr name="stlIndicatorHeight" format="dimension" />
        <!-- 滑动条所在的那个全宽线的高度 -->
        <attr name="stlUnderlineHeight" format="dimension" />
        <!-- 滑动条圆角-->
        <attr name="stlUnderlineCorner" format="dimension" />
        <!-- 滑动条距离底部高度 -->
        <attr name="stlUnderlineMarginBottom" format="dimension" />
        <!-- 分割线底部和顶部的填充宽度 -->
        <attr name="stlDividerPadding" format="dimension" />
        <!-- 每个标签左右填充宽度 -->
        <attr name="stlTabPaddingLeftRight" format="dimension" />
        <attr name="stlScrollOffset" format="dimension" />
        <attr name="stlTabBackground" format="reference" />
        <!-- 如果设置为true，每个标签是相同的控件，均匀平分整个屏幕，默认是false -->
        <attr name="stlShouldExpand" format="boolean" />
        <!-- 如果为true，所有标签都是大写字母，默认为true -->
        <attr name="stlTextAllCaps" format="boolean" />

        <attr name="stlTabTextSize" format="dimension" />
        <attr name="stlTabTextColor" format="color" />
        <attr name="stlSelectedTabTextSize" format="dimension" />
        <attr name="stlSelectedTabTextColor" format="color" />
        <attr name="stlSelectedTabTextStyle" format="boolean" />
        <attr name="stlLineSize" format="dimension" />

        <attr name="stlTabPaddingStart" format="dimension" />
        <attr name="stlTabPaddingEnd" format="dimension" />
    </declare-styleable>


    <!-- SimpleTabLayout指示器 -->
    <declare-styleable name="MCustomTablayout">
        <!-- 自定义Tab的布局-->
        <attr name="mct_tab_layout" format="reference" />
        <!-- 默认文本大小 -->
        <attr name="mct_unselect_text_size" format="dimension"/>
        <!-- 选中文本大小 -->
        <attr name="mct_select_text_size" format="dimension"/>
        <!-- 选中是否加粗 -->
        <attr name="mct_select_text_blod" format="boolean"/>
    </declare-styleable>

    <!-- 简洁的ViewPager指示器 -->
    <declare-styleable name="SimplePageIndicator">
        <attr name="dotHeight" format="dimension" />
        <attr name="dotWidth" format="dimension" />
        <attr name="dotMargin" format="dimension" />
        <attr name="dotDrawable" format="reference" />
        <attr name="dotSelectColor" format="color" />
        <attr name="dotUnSelectColor" format="color" />
    </declare-styleable>

    <!--圆角剪裁控件-->
    <declare-styleable name="viewOutLineStrategy">
        <attr name="clip_radius" format="dimension"></attr>
        <attr name="clip_side" format="enum">
            <enum name="all" value="0"></enum>
            <enum name="left" value="1"></enum>
            <enum name="top" value="2"></enum>
            <enum name="right" value="3"></enum>
            <enum name="bottom" value="4"></enum>
        </attr>
    </declare-styleable>


    <!--流式布局-->
    <declare-styleable name="AutoFlowLayout">
        <attr name="singleLine" format="boolean"></attr>
        <attr name="maxLines" format="integer"></attr>
        <attr name="multiChecked" format="boolean"></attr>
        <attr name="horizontalSpace" format="dimension"></attr>
        <attr name="verticalSpace" format="dimension"></attr>
        <attr name="columnNumbers" format="integer"></attr>
        <attr name="rowNumbers" format="integer"></attr>
        <attr name="cutLineWidth" format="dimension"></attr>
        <attr name="cutLineColor" format="color"></attr>
        <attr name="cutLine" format="boolean"></attr>
        <attr name="lineCenter" format="boolean"></attr>
    </declare-styleable>

    <!--setting item-->
    <declare-styleable name="CommonSettingItem">
        <attr name="csi_left_text" format="string"/>
        <attr name="csi_left_icon" format="reference"/>
        <attr name="csi_right_text" format="string"/>
        <attr name="csi_right_icon" format="reference"/>
        <attr name="csi_showLine" format="boolean"/>
        <attr name="csi_needSkin" format="boolean"/>
    </declare-styleable>


    <!--展开收起View-->
    <declare-styleable name="ExpandableTextView">
        <!--保留的行数-->
        <attr name="ep_max_line" format="integer" />
        <!--是否需要展开-->
        <attr name="ep_need_expand" format="boolean" />
        <!--是否需要收起 这个是建立在开启展开的基础上的-->
        <attr name="ep_need_contract" format="boolean" />
        <!--是否需要@用户 -->
        <attr name="ep_need_mention" format="boolean" />
        <!--是否需要对链接进行处理 -->
        <attr name="ep_need_link" format="boolean" />
        <!--是否需要动画-->
        <attr name="ep_need_animation" format="boolean" />
        <!--是否需要永远将展开或者收回放置在最后边-->
        <attr name="ep_need_always_showright" format="boolean" />
        <!--是否需要将连接转换成网页链接显示 默认为true-->
        <attr name="ep_need_convert_url" format="boolean" />
        <!--是否需要自定义规则-->
        <attr name="ep_need_self" format="boolean" />
        <!--收起的文案-->
        <attr name="ep_contract_text" format="string" />
        <!--展开的文案-->
        <attr name="ep_expand_text" format="string" />
        <!--展开的文字的颜色-->
        <attr name="ep_expand_color" format="color" />
        <!--收起的文字的颜色-->
        <attr name="ep_contract_color" format="color" />
        <!--在收回和展开前面添加的内容的字体颜色-->
        <attr name="ep_end_color" format="color" />
        <!--链接的文字的颜色-->
        <attr name="ep_link_color" format="color" />
        <!--@用户的文字的颜色-->
        <attr name="ep_mention_color" format="color" />
        <!--自定义规则的文字的颜色-->
        <attr name="ep_self_color" format="color" />
        <!--链接的图标-->
        <attr name="ep_link_res" format="reference" />
    </declare-styleable>


    <declare-styleable name="ClearEditText">
        <attr name="deleteDrawable" format="reference"/>
        <attr name="passwordDrawable" format="reference"/>
        <attr name="passwordDrawableInvisible" format="reference"/>
        <attr name="isshowpassword" format="boolean"/>
        <attr name="isCenter" format="boolean"/>
    </declare-styleable>


    <!--带进度的ProgressBar-->
    <declare-styleable name="CircleProgressView">
        <!--画笔宽度-->
        <attr name="cpv_paint_width" format="dimension" />
        <!--画笔颜色-->
        <attr name="cpv_paint_color" format="color" />
        <!--字体颜色-->
        <attr name="cpv_text_color" format="color" />
        <!--背景圆圈颜色-->
        <attr name="cpv_circle_color" format="color" />
        <!--字体尺寸-->
        <attr name="cpv_text_size" format="dimension" />
        <!--只显示圆圈上的进度-->
        <attr name="cpv_only_circle" format="boolean" />
        <!--加载进度的开始位置-->
        <attr name="cpv_location" format="enum">
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>
    </declare-styleable>


    <!--带进度的下载状态控件 -->
    <declare-styleable name="DownloadStateView">
        <attr name="dsv_state_unstart" format="reference" />
        <attr name="dsv_state_doing" format="reference" />
        <attr name="dsv_state_complete" format="reference" />
        <attr name="dsv_state_loading" format="reference" />
        <attr name="dsv_state_pause" format="reference" />
        <attr name="dsv_state_error" format="reference" />
        <!--简单模式只显示转圈，不显示具体进度值-->
        <attr name="dsv_simple_mode" format="boolean"/>

        <!--画笔宽度-->
        <attr name="dsv_paint_width" format="dimension" />
        <!--画笔颜色-->
        <attr name="dsv_paint_color" format="color" />
        <!--字体颜色-->
        <attr name="dsv_text_color" format="color" />
        <!--字体尺寸-->
        <attr name="dsv_text_size" format="dimension" />
        <!--加载进度的开始位置-->
        <attr name="dsv_location" format="enum">
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>
    </declare-styleable>


    <!--带标签的textview-->
    <declare-styleable name="TagTextView">
        <!--文字颜色-->
        <attr name="ttv_text_color" format="color" />
        <!--边框-->
        <attr name="ttv_border_res" format="reference" />
        <!--边框间距-->
        <attr name="ttv_border_padding" format="dimension"/>
        <!--标签位置-->
        <attr name="ttv_tag_location" format="enum">
            <enum name="start" value="1" />
            <enum name="end" value="2" />
        </attr>
    </declare-styleable>


    <!-- 垂直方向的虚线 -->
    <declare-styleable name="DashView">
        <!-- 虚线颜色 -->
        <attr name="divider_line_color" format="color"/>
        <!-- 虚线宽度 -->
        <attr name="dashThickness" format="dimension"/>
        <!-- 虚线dash宽度 -->
        <attr name="dashLength" format="dimension"/>
        <!-- 虚线dash间隔 -->
        <attr name="dashGap" format="dimension"/>
        <!-- 虚线朝向 -->
        <attr name="divider_orientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
    </declare-styleable>
</resources>